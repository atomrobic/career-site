{
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "pip install -r requirements.txt --no-cache-dir && cd backend/myproject && python manage.py collectstatic --noinput"
    },
    "deploy": {
      "startCommand": "cd backend/myproject && gunicorn myproject.wsgi:application --bind 0.0.0.0:$PORT",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    },
    "envVars": {
      "PYTHON_VERSION": "3.12.4",
      "DJANGO_SETTINGS_MODULE": "myproject.settings",
      "ALLOWED_HOSTS": ".railway.app",
      "DEBUG": "False",
      "PYTHONPATH": "backend/myproject",
      "STATIC_ROOT": "staticfiles"
    }
}